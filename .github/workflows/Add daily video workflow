name: Medusa Daily Video

# Schedule: runs daily at 2 PM UTC
on:
  schedule:
    - cron: '0 14 * * *'  # 2 PM UTC every day
  workflow_dispatch:      # also allows manual trigger

jobs:
  build_video:
    runs-on: ubuntu-latest
    steps:
      # 1. Checkout repository
      - name: Checkout repo
        uses: actions/checkout@v3

      # 2. Set up Python
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      # 3. Install dependencies
      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      # 4. Generate the story
      - name: Generate daily Medusa story
        run: python story_generator.py

      # 5. Generate images
      - name: Generate images from Hugging Face
        run: python image_generator.py

      # 6. Generate voiceover
      - name: Generate TTS audio
        run: python tts_generator.py

      # 7. Build final video
      - name: Build video
        run: python video_builder.py

      # 8. Optional: Upload to Drive or GitHub release
      - name: Upload video to GitHub release
        uses: softprops/action-gh-release@v1
        with:
          files: daily_video.mp4
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      # 9. Optional: Upload to YouTube (if you have API set up)
      # - name: Upload to YouTube
      #   run: python upload_youtube.py
      #   env:
      #     YOUTUBE_API_KEY: ${{ secrets.YOUTUBE_API_KEY }}
